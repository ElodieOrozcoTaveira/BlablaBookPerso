{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "baseUrl": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "types": ["vitest/globals", "node"]
  },
 "include": [
    "src/**/*.ts",
    "tests/**/*.ts", "jest.config.ts",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
