{
  "name": "blablabook-backend",
  "version": "1.0.0",
  "description": "Backend securise Zero Trust pour BlaBlaBook - Plateforme de gestion de livres",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsc -p tsconfig.build.json",
    "test": "cd .. && docker compose -f docker-compose.dev.yml exec -e NODE_OPTIONS='--import=tsx/esm' api npx jest",
    "test:local": "NODE_OPTIONS='--import=tsx/esm' jest --config jest.config.ts --passWithNoTests",
    "test:watch": "jest --watch",
    "test:models": "jest tests/unit/models.test.ts",
    "test:db": "jest tests/unit/database.test.ts",
    "db:create": "tsx src/scripts/db-create.ts",
    "db:seed": "tsx src/scripts/db-seed.ts",
    "db:reset": "tsx src/scripts/db-reset.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "blablabook",
    "security",
    "zero-trust",
    "owasp",
    "typescript",
    "books"
  ],
  "author": "Stephane",
  "license": "MIT",
  "dependencies": {
    "@types/express-session": "^1.18.2",
    "@types/node-fetch": "^2.6.13",
    "@types/pg": "^8.15.5",
    "argon2": "^0.31.2",
    "axios": "^1.11.0",
    "connect-redis": "^9.0.0",
    "cors": "^2.8.5",
    "dompurify": "^3.0.7",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.18.2",
    "express-slow-down": "^2.0.1",
    "helmet": "^7.1.0",
    "jsdom": "^23.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-fetch": "^3.3.2",
    "pg": "^8.16.3",
    "pg-hstore": "^2.3.4",
    "redis": "^5.8.2",
    "sequelize": "^6.35.2",
    "sharp": "^0.34.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@types/cors": "^2.8.17",
    "@types/dompurify": "^3.0.5",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.17.23",
    "@types/jest": "^30.0.0",
    "@types/jsdom": "^21.1.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.2.0",
    "jest": "^30.0.5",
    "jest-mock": "^30.0.5",
    "nodemon": "^3.0.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
