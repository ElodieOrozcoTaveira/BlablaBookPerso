{
  "name": "backend",
  "version": "1.0.0",
  "description": "BackEnd Blablabook",
  "main": "index.js",
  "scripts": {
    "test:vitest": "vitest run --no-file-parallelism --maxWorkers=1",
    "test:ci": "rm -rf dist && docker compose -f ../docker-compose.test.yml up -d db && sleep 5 && export $(cat .env.test | xargs) && vitest run --run --passWithNoTests --no-file-parallelism --maxWorkers=1 || true; docker compose -f ../docker-compose.test.yml down",
    "test:vitest:watch": "vitest --no-file-parallelism --maxWorkers=1",
    "test:unit": "vitest run tests/unit/ --no-file-parallelism --maxWorkers=1",
    "test:lazy": "vitest run tests/unit/controllers/reading-list.controller.lazy-import.test.ts tests/unit/controllers/rate.controller.lazy-import.test.ts tests/unit/controllers/notice.controller.lazy-import.test.ts --no-file-parallelism --maxWorkers=1",
    "test:integration": "vitest run tests/integration/ --no-file-parallelism --maxWorkers=1",
    "test:all": "node test-all.mjs",
    "coverage:vitest": "vitest run --coverage --no-file-parallelism --maxWorkers=1",
    "dev": "tsx watch src/index.ts",
    "dev:test": "tsx watch src/serverTest.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "infra:wait-db": "bash scripts-infra/wait-for-db.sh",
    "dev:db:create": "tsx src/scripts/createTables.ts",
    "dev:db:seed": "tsx src/scripts/seedTables.ts",
    "dev:db:reset": "tsx src/scripts/createTables.ts && tsx src/scripts/seedTables.ts",
    "dev:test:openlib": "tsx scripts-dev/testing/openlibrary.ts",
    "dev:test:integration-openlib": "tsx scripts-dev/testing/integration-openlibrary.ts",
    "dev:user:create": "tsx scripts-dev/utilities/create-test-user.ts",
    "dev:test:security": "node scripts-dev/testing/security.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ElodieOrozcoTaveira/BlablaBookPerso.git"
  },
  "keywords": [
    "blablabook",
    "backend"
  ],
  "author": "Elodie Orozco Taveira",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ElodieOrozcoTaveira/BlablaBookPerso/issues"
  },
  "homepage": "https://github.com/ElodieOrozcoTaveira/BlablaBookPerso#readme",
  "dependencies": {
    "@types/cookie-parser": "^1.4.9",
    "@types/express-session": "^1.18.2",
    "@types/node-fetch": "^2.6.13",
    "argon2": "^0.44.0",
    "axios": "^1.12.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csrf-csrf": "^4.0.3",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "sequelize": "^6.37.7",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^5.0.3",
    "@types/express-rate-limit": "^5.1.3",
    "@types/helmet": "^0.0.48",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.15.5",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  }
}
