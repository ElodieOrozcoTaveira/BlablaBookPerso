{
  "name": "blablabook",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint backend frontend",
    "lint:fix": "eslint backend frontend --fix",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up",
    "docker:dev:build": "docker-compose -f docker-compose.dev.yml build --no-cache",
    "docker:dev:clean": "docker-compose -f docker-compose.dev.yml down -v && docker system prune -f",
    "docker:dev:install:backend": "docker-compose -f docker-compose.dev.yml run --rm api npm install",
    "docker:dev:install:frontend": "docker-compose -f docker-compose.dev.yml run --rm client npm install",
    "docker:dev:shell": "docker-compose -f docker-compose.dev.yml run --rm api sh",
    "docker:prod": "docker-compose -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker-compose -f docker-compose.prod.yml build --no-cache",
    "docker:prod:clean": "docker-compose -f docker-compose.prod.yml down -v",
    "docker:prod:shell": "docker-compose -f docker-compose.prod.yml run --rm api sh"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-unused-imports": "^4.2.0"
  },
  "dependencies": {
    "react-router-dom": "^7.8.1",
    "zod": "^4.0.17"
  }
}
